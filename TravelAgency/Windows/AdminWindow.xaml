<Window x:Class="TravelAgency.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.Windows"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="AdminWindow"
        Height="700"
        Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="10"
            BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1,0.7">
                        <GradientStop Color="{DynamicResource secondaryBackColor1}"
                                      Offset="0" />
                        <GradientStop Color="{DynamicResource secondaryBackColor2}"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">

                        <StackPanel Orientation="Horizontal"
                                    Height="35"
                                    Margin="15,25,0,40">

                            <Image Source="/Images/Logo-transparent.png"
                                   Height="30" />
                            <TextBlock Text="Planned Escape"
                                       Foreground="{DynamicResource titleColor2}"
                                       FontSize="20"
                                       FontFamily="Calibri"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0" />
                        </StackPanel>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{DynamicResource menuContentColor}"
                                     IsChecked="True"
                                     Command="{Binding ShowHomeViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="User"
                                              Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="Employees"
                                           Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{DynamicResource menuContentColor}"
                                     IsChecked="True"
                                     Command="{Binding ShowHomeViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="LocationDot"
                                              Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="Destinations"
                                           Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{DynamicResource menuContentColor}"
                                     IsChecked="True"
                                     Command="{Binding ShowHomeViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Hotel"
                                              Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="Hotels"
                                           Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{DynamicResource menuContentColor}"
                                     IsChecked="True"
                                     Command="{Binding ShowHomeViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="PlaneDeparture"
                                              Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="Packages"
                                           Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{DynamicResource menuContentColor}"
                                     IsChecked="True"
                                     Command="{Binding ShowHomeViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="BookOpen"
                                              Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="Reservations"
                                           Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>

                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <Button Click="LogoutButton_Click"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="10,0,10,0"
                                Style="{DynamicResource LogoutButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="SignOut"
                                              Height="18"
                                              Width="18"
                                              Margin="5,0,0,0"
                                              Foreground="{DynamicResource plainTextColor1}" />
                                <TextBlock Text="Log Out"
                                           FontSize="18"
                                           Margin="5,0,5,0"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource plainTextColor1}" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                
            </Border>

            
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1"
                                         EndPoint="0,0">
                        <GradientStop Color="{DynamicResource primaryBackColor1}"
                                      Offset="0" />
                        <GradientStop Color="{DynamicResource primaryBackColor2}"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border BorderThickness="0"
                            Grid.Column="0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="1,0.7">
                                <GradientStop Color="{DynamicResource secondaryBackColor1}"
                                              Offset="0" />
                                <GradientStop Color="{DynamicResource secondaryBackColor2}"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="25" />
                                    <ColumnDefinition Width="25" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnMinimise"
                                        Style="{StaticResource MinimiseButtonStyle}"
                                        Grid.Column="1"
                                        Click="btnMinimise_Click">
                                </Button>

                                <Button x:Name="btnClose"
                                        Style="{StaticResource CloseButtonStyle}"
                                        Grid.Column="2"
                                        Click="btnClose_Click">
                                </Button>
                            </Grid>

                            <Grid Grid.Row="1"
                                  VerticalAlignment="Top"
                                  HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                </Grid.RowDefinitions>

                                <StackPanel
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <fa:IconImage Icon="{Binding Icon}"
                                                  Height="20"
                                                  Width="20"
                                                  Foreground="{StaticResource titleColor2}"
                                                  Margin="35,0,10,0" />

                                    <TextBlock Text="{Binding Caption}"
                                               Foreground="{StaticResource titleColor2}"
                                               FontSize="16"
                                               FontFamily="Calibri"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center" />
                                </StackPanel>

                                <Menu Grid.Column="1"
                                    Margin="0,0,60,0"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Width="60">
                                    <MenuItem Header="Theme"
                                              Style="{DynamicResource MenuDottsStyle}"
                                              StaysOpenOnClick="True">
                                        <MenuItem Header="Blue"
                                                  Click="Blue_Click"
                                                  Style="{DynamicResource MenuOptionStyle}" />
                                        <MenuItem Header="Dark"
                                                  Click="Dark_Click"
                                                  Style="{DynamicResource MenuOptionStyle}" />
                                        <MenuItem Header="Burgundy"
                                                  Click="Burgundy_Click"
                                                  Style="{DynamicResource MenuOptionStyle}" />
                                    </MenuItem>
                                </Menu>
                            </Grid>
                           
                        </Grid>

                    </Border>
                    <!--
                    <ContentControl Content="{Binding CurrentChildView}"
                                    Grid.Row="2"
                                    Margin="25" />
                    -->
                    <Frame Name="MainFrame"
                           Grid.Row="2"
                           Margin="25"
                           NavigationUIVisibility="Hidden"
                           Navigated="MainFrame_Navigated" />
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>
