<Window x:Class="TravelAgency.Windows.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.Windows"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="LoginWindow"
        Height="550"
        Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">


    <Border CornerRadius="12">

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1"
                                 EndPoint="1,0">
                <GradientStop Color="#c9b0eb"
                              Offset="0" />
                <GradientStop Color="#e7dff2"
                              Offset="1" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>

                <Button x:Name="btnMinimise"
                        Style="{StaticResource MinimiseButtonStyle}"
             Grid.Column="1"
             Click="btnMinimise_Click">
                    </Button>
                
                <Button x:Name="btnClose"
                        Style="{StaticResource CloseButtonStyle}"
                        Grid.Column="2"
                       Click="btnClose_Click">
                </Button>
            </Grid>

            <DockPanel Grid.Row="2">

                <!-- Docking the Image to the Left -->
                <Image DockPanel.Dock="Left"
                       Source="/Images/Logo-transparent.png"
                       Width="400"
                       Height="400"
                       Stretch="UniformToFill" />

                <Grid HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Margin="50,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <!--
           <RowDefinition Height="Auto"/>
           <RowDefinition Height="Auto"/>
           -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>


                    <!-- Ostali sadržaj bez blur efekta -->
                    <TextBlock Text="Welcome!"
                               FontSize="30"
                               FontWeight="Bold"
                               Grid.ColumnSpan="3"
                               HorizontalAlignment="Center"
                               Foreground="Purple"
                               Margin="0,0,0,30"
                               FontFamily="Segoe UI Semilight" />

                    <!--
       <TextBlock Text="Username:" 
FontSize="15"
Foreground="Gray"
Grid.Row="1" 
Grid.Column="1" 
VerticalAlignment="Center" 
HorizontalAlignment="Left"/>
       -->

                    <TextBox x:Name="txtUsername"
                             Grid.Row="1"
                             Grid.Column="1"
                             Width="200"
                             FontSize="15"
                             HorizontalAlignment="Center"
                             Margin="0,5,0,20"
                             Grid.ColumnSpan="2"
                             materialDesign:HintAssist.Hint="Username"
                             Style="{StaticResource MaterialDesignFilledTextBox}"
                             TextWrapping="Wrap" />
                    <!--
       <TextBlock Text="Password:" 
    Foreground="Gray"
FontSize="15" 
Grid.Row="3" 
Grid.Column="1" 
VerticalAlignment="Center" 
HorizontalAlignment="Left"/>
       
       -->
                    <PasswordBox x:Name="txtPassword"
                                 Grid.Row="2"
                                 Grid.Column="1"
                                 Width="200"
                                 FontSize="15"
                                 HorizontalAlignment="Left"
                                 Margin="0,5,0,5"
                                 Grid.ColumnSpan="2"
                                 materialDesign:HintAssist.Hint="Password"
                                 Style="{StaticResource MaterialDesignFilledPasswordBox}" />

                    <Button x:Name="loginButtn"
                            Content="Login"
                            Grid.Row="3"
                            HorizontalAlignment="Center"
                            Grid.ColumnSpan="2"
                            Margin="0,40,0,20"
                            Click="LoginButton_Click"
                            Style="{DynamicResource ProceedButtonStyle}" />
                </Grid>
            </DockPanel>
        </Grid>
    </Border>
</Window>
