<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Color x:Key="PrimaryColor">#d934ad</Color>
    <Color x:Key="SecondaryColor">#c22f9b</Color>
    <Color x:Key="MouseOverColor">#ab0a80</Color>
    <Color x:Key="ForegroundColor">#fadcf2</Color>


    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource SecondaryColor}" />
    <SolidColorBrush x:Key="MouseOverBrush" Color="{DynamicResource MouseOverColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{DynamicResource ForegroundColor}" />

    <Color x:Key="PrimaryColor">#6A0DAD</Color>
    <!-- Tamno ljubičasta -->
    <Color x:Key="SecondaryColor">#7B1FA2</Color>
    <!-- Srednje ljubičasta -->
    <Color x:Key="MouseOverColor">#9C27B0</Color>
    <!-- Svetlija ljubičasta -->
    <Color x:Key="ForegroundColor">#FFFFFF</Color>
    <!-- Bela za kontrast -->
    <Color x:Key="primaryBackColor1">#EDE7F6</Color>
    <!-- Svetla ljubičasta pozadina -->
    <Color x:Key="primaryBackColor2">#D1C4E9</Color>
    <!-- Još svetlija ljubičasta pozadina -->
    <Color x:Key="secondaryBackColor1">#4A148C</Color>
    <!-- Tamna ljubičasta pozadina -->
    <Color x:Key="secondaryBackColor2">#311B92</Color>
    <!-- Još tamnija ljubičasta pozadina -->

    <SolidColorBrush x:Key="panelColor"
                     Color="#512D6D" />
    <SolidColorBrush x:Key="panelOverColor"
                     Color="#5E3A84" />
    <SolidColorBrush x:Key="panelActiveColor"
                     Color="#6C4399" />

    <SolidColorBrush x:Key="menuContentColor"
                     Color="#EDE7F6" />
    <SolidColorBrush x:Key="titleColor1"
                     Color="#311B92" />
    <SolidColorBrush x:Key="titleColor2"
                     Color="#D1C4E9" />
    <SolidColorBrush x:Key="titleColor3"
                     Color="#B39DDB" />
    <SolidColorBrush x:Key="plainTextColor1"
                     Color="#9575CD" />
    <SolidColorBrush x:Key="plainTextColor2"
                     Color="#7E57C2" />
    <SolidColorBrush x:Key="plainTextColor3"
                     Color="#673AB7" />


</ResourceDictionary>