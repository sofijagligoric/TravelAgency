<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<!-- 
    <Color x:Key="PrimaryColor">#750d0d</Color>
    <Color x:Key="SecondaryColor">#590202</Color>
    <Color x:Key="MouseOverColor">#450101</Color>
    <Color x:Key="ForegroundColor">#faf0f0</Color>
     
-->

    <SolidColorBrush x:Key="PrimaryBrush"
                     Color="{DynamicResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush"
                     Color="{DynamicResource SecondaryColor}" />
    <SolidColorBrush x:Key="MouseOverBrush"
                     Color="{DynamicResource MouseOverColor}" />
    <SolidColorBrush x:Key="ForegroundBrush"
                     Color="{DynamicResource ForegroundColor}" />
    
 

    <Color x:Key="PrimaryColor">#800000</Color>
    <!-- Tamnija bordo -->
    <Color x:Key="SecondaryColor">#A52A2A</Color>
    <!-- Braon-bordo nijansa -->
    <Color x:Key="MouseOverColor">#B22222</Color>
    <!-- Svetlija bordo -->
    <Color x:Key="ForegroundColor">#FFFFFF</Color>
    <!-- Bela za kontrast -->
    <Color x:Key="primaryBackColor1">#F5E4E4</Color>
    <!-- Svetlija pozadina -->
    <Color x:Key="primaryBackColor2">#E8C6C6</Color>
    <!-- Svetlija bordo pozadina -->
    <Color x:Key="secondaryBackColor1">#4D0F0F</Color>
    <!-- Tamna bordo pozadina -->
    <Color x:Key="secondaryBackColor2">#360B0B</Color>
    <!-- Još tamnija bordo pozadina -->

    <SolidColorBrush x:Key="panelColor"
                     Color="#5A0E0E" />
    <SolidColorBrush x:Key="panelOverColor"
                     Color="#6A1212" />
    <SolidColorBrush x:Key="panelActiveColor"
                     Color="#7B1717" />
    <SolidColorBrush x:Key="secondaryBackColor2Brush"
                     Color="{DynamicResource secondaryBackColor2}" />

    <SolidColorBrush x:Key="menuContentColor"
                     Color="#F5E4E4" />
    <SolidColorBrush x:Key="titleColor1"
                     Color="#360B0B" />
    <SolidColorBrush x:Key="titleColor2"
                     Color="#E8C6C6" />
    <SolidColorBrush x:Key="titleColor3"
                     Color="#D4A6A6" />
    <SolidColorBrush x:Key="plainTextColor1"
                     Color="#C48B8B" />
    <SolidColorBrush x:Key="plainTextColor2"
                     Color="#B37070" />
    <SolidColorBrush x:Key="plainTextColor3"
                     Color="#9F5A5A" />

   
</ResourceDictionary>