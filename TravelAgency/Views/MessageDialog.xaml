<Window x:Class="TravelAgency.Views.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.Views"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="PlannedEscape"
        Height="250"
        Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        ResizeMode="NoResize">
    <Border CornerRadius="0,0,10,10"
            BorderThickness="1">
        <Border.BorderBrush>
            <SolidColorBrush Color="{DynamicResource secondaryBackColor2}" />
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="1,1"
                                 EndPoint="0,0">
                <GradientStop Color="{DynamicResource primaryBackColor1}"
                              Offset="0" />
                <GradientStop Color="{DynamicResource primaryBackColor2}"
                              Offset="1" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border BorderThickness="0"
                    Grid.Row="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1,0.7">
                        <GradientStop Color="{DynamicResource secondaryBackColor1}"
                                      Offset="0" />
                        <GradientStop Color="{DynamicResource secondaryBackColor2}"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>


                    <Button x:Name="btnClose"
                            Style="{DynamicResource controlButton}"
                            Tag="{DynamicResource SecondaryBrush}"
                            Click="btnClose_Click"
                            HorizontalAlignment="Right">
                        <fa:IconImage Icon="Xmark"
                                      Style="{DynamicResource controlButtonIcon}" />
                    </Button>
                </Grid>
            </Border>


            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Focusable="False"
                          Grid.Row="1">
                <TextBlock x:Name="MessageTextBlock"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Left"
                           FontSize="15"
                           TextWrapping="Wrap"
                           Margin="25" />
            </ScrollViewer>


            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,20">
                <Button Content="OK"
                        Style="{DynamicResource ProceedButtonStyle}"
                        Click="OkButton_Click"
                        Margin="0,0,5,0"
                        IsDefault="True" />
                <Button Content="{DynamicResource Cancel}"
                        Style="{DynamicResource ProceedButtonStyle}"
                        Margin="5,0,0,0"
                        Click="CancelButton_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
