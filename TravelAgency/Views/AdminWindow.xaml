<Window x:Class="TravelAgency.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.Views"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AdminWindow"
        Height="700"
        Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="10"
            BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1,0.7">
                        <GradientStop Color="{DynamicResource secondaryBackColor1}"
                                      Offset="0" />
                        <GradientStop Color="{DynamicResource secondaryBackColor2}"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">

                        <StackPanel Orientation="Horizontal"
                                    Height="35"
                                    Margin="15,25,0,40">

                            <Image Source="/Images/Logo-transparent.png"
                                   Height="30" />
                            <TextBlock Text="Planned Escape"
                                       Foreground="{DynamicResource titleColor2}"
                                       FontSize="20"
                                       FontFamily="Calibri"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0" />
                        </StackPanel>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{DynamicResource menuContentColor}"
                                     IsChecked="True"
                                     Command="{Binding ShowEmployeesCommand}">
                            <!--
                                     Command="{Binding ShowHomeViewCommand}"
                            -->
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="User"
                                              Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="{DynamicResource Employees}"
                                           Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{DynamicResource menuContentColor}"
                                     Command="{Binding ShowDestinationsCommand}"
                                     IsChecked="False">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="LocationDot"
                                              Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="{DynamicResource Destinations}"
                                           Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{DynamicResource menuContentColor}"
                                     Command="{Binding ShowHotelsCommand}"
                                     IsChecked="False">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Hotel"
                                              Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="{DynamicResource Hotels}"
                                           Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{DynamicResource menuContentColor}"
                                     IsChecked="False">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="PlaneDeparture"
                                              Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="{DynamicResource Packages}"
                                           Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{DynamicResource menuContentColor}"
                                     IsChecked="False"
                                     Command="{Binding ShowReservationsCommand}">

                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="CalendarCheck"
                                              Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="{DynamicResource Reservations}"
                                           Style="{StaticResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>

                    <StackPanel Grid.Row="1"
                                Orientation="Vertical"
                                VerticalAlignment="Bottom">
                        <Button Command="{Binding ChangePasswordCommand}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="10,0,10,0"
                                Width="auto"
                                Style="{DynamicResource LogoutButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Key"
                                              Height="15"
                                              Width="15"
                                              Margin="5,0,0,0"
                                              Foreground="{DynamicResource plainTextColor1}" />
                                <TextBlock Text="{DynamicResource ChangePassword}"
                                           FontSize="18"
                                           Margin="5,0,5,0"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource plainTextColor1}" />
                            </StackPanel>
                        </Button>

                        <Button Click="LogoutButton_Click"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="10,0,10,0"
                                Style="{DynamicResource LogoutButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="SignOut"
                                              Height="15"
                                              Width="15"
                                              Margin="5,0,0,0"
                                              Foreground="{DynamicResource plainTextColor1}" />
                                <TextBlock Text="{DynamicResource Logout}"
                                           FontSize="18"
                                           Margin="5,0,5,0"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource plainTextColor1}" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

            </Border>


            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1"
                                         EndPoint="0,0">
                        <GradientStop Color="{DynamicResource primaryBackColor1}"
                                      Offset="0" />
                        <GradientStop Color="{DynamicResource primaryBackColor2}"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border BorderThickness="0"
                            Grid.Column="0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="1,0.7">
                                <GradientStop Color="{DynamicResource secondaryBackColor1}"
                                              Offset="0" />
                                <GradientStop Color="{DynamicResource secondaryBackColor2}"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="35" />
                                    <ColumnDefinition Width="35" />
                                    <ColumnDefinition Width="35" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>


                                <Button x:Name="btnMinimise"
                                        Style="{DynamicResource controlButton}"
                                        Grid.Column="1"
                                        Tag="{DynamicResource SecondaryColor}"
                                        Click="btnMinimise_Click">
                                    <fa:IconImage Icon="WindowMinimize"
                                                  Style="{DynamicResource controlButtonIcon}" />
                                </Button>

                                <Button x:Name="btnMaximise"
                                        Style="{DynamicResource controlButton}"
                                        Grid.Column="2"
                                        Tag="{DynamicResource SecondaryColor}"
                                        Click="btnMaximise_Click">
                                    <fa:IconImage Icon="WindowMaximize"
                                                  Style="{DynamicResource controlButtonIcon}" />
                                </Button>

                                <Button x:Name="btnClose"
                                        Style="{DynamicResource controlButton}"
                                        Grid.Column="3"
                                        Tag="{DynamicResource SecondaryColor}"
                                        Click="btnClose_Click">
                                    <fa:IconImage Icon="Xmark"
                                                  Style="{DynamicResource controlButtonIcon}" />
                                </Button>

                               
                            </Grid>

                            <Grid Grid.Row="1"
                                  VerticalAlignment="Top"
                                  HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="10" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Width="Auto">


                                    <fa:IconImage Icon="{Binding Icon, Mode=TwoWay}"
                                                  Height="18"
                                                  Width="18"
                                                  x:Name="MainIcon"
                                                  Foreground="{StaticResource titleColor2}"
                                                  Margin="10,0,10,0" />

                                    <TextBlock Text="{Binding Caption, Mode=TwoWay}"
                                               Foreground="{StaticResource titleColor2}"
                                               FontSize="18"
                                               x:Name="MainCaption"
                                               FontFamily="Calibri"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center" />
                                    
                                </StackPanel>

                                <!--
                                <Menu Grid.Column="1"
                                      Margin="0,0,10,0"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                            
                                      Width="70"
                                      Height="35">
                                    <MenuItem Header="{DynamicResource Theme}"
                                              Style="{DynamicResource MenuDottsStyle}"
                                              
                                              StaysOpenOnClick="True">
                                        <MenuItem Header="{DynamicResource BlueTheme}"
                                                  Click="Blue_Click"
                                                  IsCheckable="True"
                                                  Style="{DynamicResource MenuOptionStyle}" />
                                        <MenuItem Header="{DynamicResource DarkTheme}"
                                                  Click="Dark_Click"
                                                  IsCheckable="True"
                                                  Style="{DynamicResource MenuOptionStyle}" />
                                        <MenuItem Header="{DynamicResource BurgundyTheme}"
                                                  Click="Burgundy_Click"
                                                  IsCheckable="True"
                                                  Style="{DynamicResource MenuOptionStyle}" />
                                    </MenuItem>
                                </Menu>
                                -->
                                <ComboBox x:Name="ThemeComboBox"
                                    Grid.Column="1"
                                          Margin="0,0,10,0"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Width="75"
                                          Height="35"
                                          SelectionChanged="Theme_SelectionChanged"
                                          materialDesign:HintAssist.Hint="{DynamicResource Theme}"
                                          Style="{DynamicResource ComboBoxStyle}">
                                    <ComboBoxItem Content="{DynamicResource BlueTheme}"
                                                  Tag="Blue"
                                                  />
                                    <ComboBoxItem Content="{DynamicResource DarkTheme}"
                                                  Tag="Dark"
                                                 />
                                    <ComboBoxItem Content="{DynamicResource BurgundyTheme}"
                                                  Tag="Burgundy"
                                                   />
                                </ComboBox>

                                <StackPanel  Grid.Column="2"
                                             Orientation="Horizontal"
                                             VerticalAlignment="Center">

                                    <Button Content="EN"
                                            x:Name="EngButton"
                                            Click="Set_English_Lang"
                                            Style="{DynamicResource LanguageButtonStyle}" />

                                    <Button Content="SR"
                                            x:Name="SerButton"
                                            Click="Set_Serbian_Lang"
                                            Style="{DynamicResource LanguageButtonStyle}" />

                                </StackPanel>

                            </Grid>

                        </Grid>

                    </Border>
                   

                    <ContentControl x:Name="MainContent"
                                    Grid.Row="1"
                                    Margin="25" />
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>
